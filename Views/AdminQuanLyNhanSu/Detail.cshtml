@model BTL_TKWeb.Models.NhanVien

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/Admin-layout.cshtml";
}


<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Trang chủ</a></li>
        <li class="breadcrumb-item"><a asp-controller="AdminQuanLyNhanSu" asp-action="Index">Quản lý nhân sự</a></li>
        <li class="breadcrumb-item active" aria-current="page">Chi tiết</li>
    </ol>
</nav>
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Chi tiết</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.MaNv)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MaNv)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TenNv)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TenNv)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Ngaysinh)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Ngaysinh)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.GioiTinh)
            </dt>
            <dd class="col-sm-10">
                @((bool)Model.GioiTinh ? "Nam" : "Nữ")
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DienThoai)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DienThoai)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.NghiViec)
            </dt>
            @{
                string cls, cont;
                if ((bool)Model.NghiViec)
                {
                    cls = "badge badge-warning";
                    cont = "Đã nghỉ việc";
                }
                else
                {
                    cls = "badge badge-success";
                    cont = "Đang hoạt động";
                }
            }
            <dd class="col-sm-10">
                <label class="@cls">@cont</label>
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.MaCvNavigation.TenCv)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MaCvNavigation.TenCv)
            </dd>
        </dl>
        <div>
            <a type="button" class="btn btn-warning" asp-action="Edit" asp-route-MaNV="@Model?.MaNv">Chỉnh sửa</a>
        </div>
    </div>
</div>
