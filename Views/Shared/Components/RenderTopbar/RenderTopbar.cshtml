@{
}
<div class="container-fluid">
    <div class="row align-items-center py-3 px-xl-5">
        <div class="col-lg-3 d-none d-lg-block">
            <a asp-controller="Home" asp-action="Index" class="text-decoration-none">
                <h1 class="m-0 display-5 font-weight-semi-bold"><span class="text-primary font-weight-bold border px-3 mr-1">Vua</span>Đệm</h1>
            </a>
        </div>
        <div class="col-lg-6 col-6 text-left">
            <form asp-controller="Shop" asp-action="Search" method="get">
                <div class="input-group">
                    <input type="text" class="form-control" id="searchSP" placeholder="Tìm kiếm sản phẩm" name="search">
                    <div class="input-group-append">
                        <button type="submit" class="input-group-text bg-transparent text-primary" id="btnSearch">
                            <i class="fa fa-search"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-lg-3 col-6 text-right">
            <a asp-controller="Cart" asp-action="Index" class="btn border">
                <i class="fas fa-shopping-cart text-primary"></i>
                <span class="badge">@Model</span>
            </a>
        </div>
    </div>
</div>