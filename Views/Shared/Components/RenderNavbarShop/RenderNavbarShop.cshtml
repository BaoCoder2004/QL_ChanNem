@{
}
@model BTL_TKWeb.Models.KhachHang
<div class="container-fluid">
    <div class="row border-top px-xl-5">
        <div class="col-lg-3 d-none d-lg-block">
            <a class="btn shadow-none d-flex align-items-center justify-content-between bg-primary text-white w-100" data-toggle="collapse" href="#navbar-vertical" style="height: 65px; margin-top: -1px; padding: 0 30px;">
                <h6 class="m-0">Danh mục</h6>
                <i class="fa fa-angle-down text-dark"></i>
            </a>
            <nav class="z-3 collapse position-absolute navbar navbar-vertical navbar-light align-items-start p-0 border border-top-0 border-bottom-0 bg-light" id="navbar-vertical" style="width: calc(100% - 30px); z-index: 1;">
                <div class="navbar-nav w-100 overflow-hidden" >
                    <!--Danh mục start-->
                    <a asp-controller="Shop" asp-action="Index" asp-route-id="CHAN" class="nav-item nav-link">Chăn</a>
                    <a asp-controller="Shop" asp-action="Index" asp-route-id="GA" class="nav-item nav-link">Ga</a>
                    <a asp-controller="Shop" asp-action="Index" asp-route-id="GOI" class="nav-item nav-link">Gối</a>
                    <a asp-controller="Shop" asp-action="Index" asp-route-id="DEM" class="nav-item nav-link">Đệm</a>
                    <a asp-controller="Shop" asp-action="Index" asp-route-id="PHUKIEN" class="nav-item nav-link">Phụ kiện</a>
                    <a asp-controller="Shop" asp-action="Index" asp-route-id="NOITHAT" class="nav-item nav-link">Nội thất</a>
                    <!--Danh mục end-->
                </div>
            </nav>
        </div>
        <div class="col-lg-9">
            <nav class="navbar navbar-expand-lg bg-light navbar-light py-3 py-lg-0 px-0">
                <a href="" class="text-decoration-none d-block d-lg-none">
                    <h1 class="m-0 display-5 font-weight-semi-bold"><span class="text-primary font-weight-bold border px-3 mr-1">Vua</span>Đệm</h1>
                </a>
                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                    <div class="navbar-nav mr-auto py-0">
                        <a asp-controller="Home" asp-action="Index" class="nav-item nav-link" id="home">Trang chủ</a>
                        <a asp-controller="Shop" asp-action="Index" class="nav-item nav-link" id="shop">Cửa hàng</a>
                        <a asp-controller="Cart" asp-action="Index" class="nav-item nav-link" id="shop">Giỏ hàng</a>
                    </div>
                    <div class="navbar-nav ml-auto py-0">
                        @{
                            if (Model != null)
                            {
                                <a asp-controller="Account" asp-action="ThongTinKH" asp-route-id="@Model.MaKh" class="nav-item nav-link">Thông tin tài khoản</a>
                                <a asp-controller="Account" asp-action="DangXuat" class="nav-item nav-link">Đăng xuất</a>
                            }
                            else
                            {
                                <a asp-controller="Account" asp-action="DangNhap" class="nav-item nav-link">Đăng nhập</a>
                                <a asp-controller="Account" asp-action="TaoTaiKhoan" class="nav-item nav-link">Đăng ký</a>
                            }
                        }
                    </div>
                </div>
            </nav>
        </div>
    </div>
</div>